@model IEnumerable<WebApplication1.Models.Proposta>

@{
    ViewBag.Title = "ListarPropostasCriadas";
}

<h2>Propostas Criadas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocalEstagio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoProposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ramo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Justificacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objetivos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocalEstagio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoProposta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ramo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Justificacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataFim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Objetivos)
        </td>
       
        <td>
            @if (item.Estado == true && item.DataFim < DateTime.Now && item.PropostaAlunoAtribuido != null && item.NotaAlunoAvaliade == null)
            {
                @Html.ActionLink("Avaliar Estagiario ", "AvaliarEstagiarios", new { id = item.PropostaId })
            }
            @Html.ActionLink("Detalhes", "DetalhesProposta", "Propostas", new { id = item.PropostaId },null)
        </td>
    </tr>
}

</table>
