@model WebApplication1.Models.Proposta

@{
    ViewBag.Title = "AvaliarEstagiarios";
}

<h2>Avaliar Estagiários</h2>

@using (Html.BeginForm())
{
    <div>
        <hr />
        <div class="form-horizontal">

            <div class="form-group">
                @Html.Label("Nome", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("NomeAluno", null, new { @class = "form-control", @Value= ViewBag.aluno})
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Proposta", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("Proposta", null, new { @class = "form-control", @Value = Model.Descricao})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Avaliar", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("Avaliar", (SelectList)ViewBag.Notas, "Avaliar", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Hidden("PropostaId",Model.PropostaId)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Aceitar" class="btn btn-default" />
        </div>
    </div>
}