@model WebApplication1.Models.Proposta

@{
    ViewBag.Title = "PropostaAtribuida";
}

<h2>Proposta Atríbuida</h2>

@if (Model != null)
{
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LocalEstagio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LocalEstagio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TipoProposta)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoProposta)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Ramo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ramo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DataInicio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataInicio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataFim)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataFim)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Objetivos)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Objetivos)
            </dd>

            @if (Model.NotaAlunoAvaliade != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.NotaAlunoAvaliade)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NotaAlunoAvaliade)

                </dd>
            }
            @if (Model.NotaEmpresaAvaliada != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.NotaEmpresaAvaliada)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NotaEmpresaAvaliada)

                </dd>
            }
</div>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Orientador")
            </dt>
            @if (Model.DocenteCriador != null)
            {
                <dd>
                    @Html.DisplayFor(modelItem => Model.DocenteCriador.Nome)
                </dd>
                <dd>
                    @Html.ActionLink("Enviar mensagem", "NovaMensagem", "Mensagem", new { email = Model.DocenteCriador.Nome }, null)
                </dd>
            }
            else if (Model.EmpresaCriador != null)
            {
                <dd>
                    @Html.DisplayFor(modelItem => Model.EmpresaCriador.Nome)
                </dd>
                <dd>
                    @Html.ActionLink("Enviar mensagem", "NovaMensagem", "Mensagem", new { email = Model.EmpresaCriador.Nome }, null)
                </dd>

            }
            @if (Model.NotaEmpresaAvaliada == null)
            {
                <dd>
                    @Html.ActionLink("Avaliar Empresa", "AvaliarEmpresa", "Alunos", new { email = Model.EmpresaCriador.Nome }, null)
                </dd>
            }

        </dl>
    </div>
}
else
{
    <h1>Ainda não lhe foi atríbuida nenhuma proposta</h1>
}



