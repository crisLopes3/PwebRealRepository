@model IEnumerable<WebApplication1.Models.Mensagem>

@{
    ViewBag.Title = "ListaMensagensEnviadas";
}

<h2>Mensagens Enviadas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Destinatario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assunto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Destinatario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assunto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>      
    </tr>
}

</table>
